<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_FFF2F2F2</item>
        <item name="colorPrimaryDark">@color/color_FFF2F2F2</item>
        <item name="colorAccent">@color/color_FFF2F2F2</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_FFF2F2F2</item>
        <item name="colorPrimaryDark">@color/color_FFF2F2F2</item>
        <item name="colorAccent">@color/color_FFF2F2F2</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="meal_style" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimary">@color/color_FFF2F2F2</item>
        <item name="colorPrimaryDark">@color/color_FFF2F2F2</item>
        <item name="colorAccent">@color/color_FFF2F2F2</item>
    </style>

    <style name="MyDialogTheme" parent="AppTheme">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 屏幕背景是否变暗 -->
        <item name="android:backgroundDimAmount">0.7</item>
    </style>
    <style  name="loading_scale_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/loading_dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/loading_dialog_scale_out</item>
    </style>
</resources>
